<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#3D8780"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lifecycle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="13dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_conversion_absoluteHeight="20dp"
        tools:layout_conversion_absoluteWidth="150dp" />

    <TextView
        android:id="@+id/lifecycle1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lifecycle"
        tools:layout_conversion_absoluteHeight="12dp"
        tools:layout_conversion_absoluteWidth="150dp" />

    <TextView
        android:id="@+id/lifecycle2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lifecycle1"
        tools:layout_conversion_absoluteHeight="12dp"
        tools:layout_conversion_absoluteWidth="150dp" />

    <TextView
        android:id="@+id/lifecycle3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lifecycle2"
        tools:layout_conversion_absoluteHeight="12dp"
        tools:layout_conversion_absoluteWidth="150dp" />

    <TextView
        android:id="@+id/lifecycle4"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lifecycle3"
        tools:layout_conversion_absoluteHeight="12dp"
        tools:layout_conversion_absoluteWidth="150dp" />

    <TextView
        android:id="@+id/lifecycle5"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lifecycle4"
        tools:layout_conversion_absoluteHeight="12dp"
        tools:layout_conversion_absoluteWidth="150dp" />

    <TextView
        android:id="@+id/viewCodeMap"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lifecycle5"
        tools:layout_conversion_absoluteHeight="12dp"
        tools:layout_conversion_absoluteWidth="150dp" />

    <TextView
        android:id="@+id/viewCodeAnswer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000000"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewCodeMap"
        tools:layout_conversion_absoluteHeight="12dp"
        tools:layout_conversion_absoluteWidth="150dp" />
    <TextView
        android:id="@+id/question_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#4CAF50"
        android:gravity="center"
        android:padding="20px"
        android:textSize="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="0dp"
        tools:text="@string/question_light1" />

    <Button
        android:id="@+id/true_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:text="@string/true_button"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text_view"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="0dp" />


    <Button
        android:id="@+id/false_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/false_button"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/true_button"
        app:layout_constraintHorizontal_bias="0.641"
        app:layout_constraintStart_toEndOf="@+id/cheat_button"
        app:layout_constraintTop_toBottomOf="@+id/question_text_view"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="0dp" />

    <Button
        android:id="@+id/next_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:drawableEnd="@drawable/arrow_right"
        android:drawablePadding="10sp"
        android:gravity="center"
        android:text="@string/next_button"
        android:textSize="14dp"
        app:layout_constraintEnd_toStartOf="@+id/cheat_button"
        app:layout_constraintHorizontal_bias="0.329"
        app:layout_constraintStart_toEndOf="@+id/pref_button"
        app:layout_constraintTop_toBottomOf="@+id/question_text_view"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="0dp" />

    <Button
        android:id="@+id/pref_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/arrow_left"
        android:drawablePadding="10sp"
        android:text="@string/pref_button"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text_view"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="0dp" />

    <Button
        android:id="@+id/updateAnswerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="2dp"
        android:drawablePadding="4sp"
        android:gravity="center"
        android:text="false"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateAnswer_View"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="85dp" />

    <Button
        android:id="@+id/ListQuestion_Button"
        android:layout_width="90dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="2dp"
        android:drawablePadding="4sp"
        android:gravity="center"
        android:text="List"
        android:textSize="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ListAnswer_View"
        tools:layout_conversion_absoluteHeight="48dp"
        tools:layout_conversion_absoluteWidth="85dp" android:layout_height="0dp"/>

    <TextView
        android:id="@+id/viewResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Приятной игры))"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/cheatPointsLife"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.88"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="20dp"
        tools:layout_conversion_absoluteWidth="150dp" />

    <TextView
        android:id="@+id/cheatPointsLife"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Life - 3"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/lastToast"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.786"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="20dp"
        tools:layout_conversion_absoluteWidth="150dp" />

    <TextView
        android:id="@+id/lastToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="------ "
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/vAndroid"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.767"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="20dp"
        tools:layout_conversion_absoluteWidth="150dp" />

    <TextView
        android:id="@+id/vAndroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="vAndroid"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_conversion_absoluteHeight="15dp"
        tools:layout_conversion_absoluteWidth="300dp" />

    <Button
        android:id="@+id/cheat_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="@string/cheat_button"
        android:textSize="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.499"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text_view"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="0dp" />

    <TextView
        android:id="@+id/ListAnswer_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="53dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:paddingStart="15dp"
        android:text="Список вопросов"
        android:textColor="#AACA4D"
        android:textSize="30px"
        app:layout_constraintBottom_toTopOf="@+id/ListQuestion_Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/updateAnswerButton"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="0dp" />

    <TextView
        android:id="@+id/updateAnswer_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="16dp"
        android:text="Автообновление вопроса"
        android:textColor="#AACA4D"
        android:textSize="30px"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pref_button"
        tools:layout_conversion_absoluteHeight="0dp"
        tools:layout_conversion_absoluteWidth="0dp" />

    <ProgressBar
        android:id="@+id/pbAnswer"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="208dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/ListQuestion_Button"
        app:layout_constraintTop_toBottomOf="@+id/cheat_button" />

    <TextView
        android:id="@+id/tvTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="00:00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/question_text_view" />

</androidx.constraintlayout.widget.ConstraintLayout>